# MongoDB connection string
# Local: mongodb://localhost:27017/umang_hospital
# Atlas: mongodb+srv://user:password@cluster.mongodb.net/umang_hospital
DATABASE_URL="mongodb://localhost:27017/umang_hospital"
PORT=4000
# JWT secret for signing tokens
JWT_SECRET=your_jwt_secret_key_here
# CORS origin for the Next.js app (comma-separated; add production domains)
CORS_ORIGIN=http://localhost:3000

# Cloudinary URL for image uploads (cloudinary://api_key:api_secret@cloud_name)
CLOUDINARY_URL=cloudinary://YOUR_API_KEY:YOUR_API_SECRET@YOUR_CLOUD_NAME
